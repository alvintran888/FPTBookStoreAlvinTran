@model List<Product>
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Page Title";
}

<div class="container-fluid mm-active" style="padding-bottom: 5%; background-color: darksalmon">
    <div class="wrapper mm-show">
        <div class="content-page">
            <div class="content">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-xl-3">
                            <!-- project card -->
                            <div class="card d-block text-dark" style="width: 300px; height: 300px; margin: 50px 30px; box-shadow: 0 10px 15px 0 rgba(0, 0, 0, 0.25),0 5px 15px 0 rgba(0, 0, 0, 0.12)">
                                <!-- project-thumbnail -->
                                <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id">
                                   @* <img class="card-img-top" src="~/img/@item.Image"
                                     alt="project image cap" style="height: 100%; width:100%"></a>*@
                                    <img class="card-img-top" src="@item.Image"
                                     alt="project image cap" style="height: 100%; width:100%">
                                </a>

                                    <!-- project title-->
                                    <h4 class="mt-0">
                                        <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id">
                                        </a>
                                        <p style="color: black;text-align: center">
                                            Name: @item.Name
                                        </p>
                                        <p style="color: black;text-align: center">Price:   $@item.Price</p>
                                        @{
                                            Random rnd = new Random();
                                            // This will return either 1 to 5 randomly.
                                            int question = rnd.Next(1, 5);
                                        }
                                        <p class="mb-2 font-weight-bold">
                                        Rate people take <span class="float-right">@question🌟</span>
                                    </p>
                                    </h4>
                                    <div class="progress progress-sm" style="color: black">
                                        <div class="progress-bar"  role="progressbar" aria-valuenow="45"
                                         aria-valuemin="0" aria-valuemax="100" style="width: @question🌟;">
                                        </div><!-- /.progress-bar -->
                                    </div><!-- /.progress -->
                            </div> <!-- end card-->
                        </div>
                    }
                    <!-- end col -->
                </div>
            </div>
        </div>
    </div>
</div>
