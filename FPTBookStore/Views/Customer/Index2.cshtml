@model FPTBookStore.Models.Category
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Page Title";
}

@*View By Category*@
<div class="container-fluid mm-active" style="padding-bottom: 5%; background-color: darksalmon">
    <div class="wrapper mm-show">
        <div class="content-page">
            <div class="content">
                <div class="row">
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-md-6 col-xl-3">
                            <!-- project card -->
                            <div class="card d-block text-dark" style="width: 300px; height: 300px; margin: 50px 30px; box-shadow: 0 10px 15px 0 rgba(0, 0, 0, 0.25),0 5px 15px 0 rgba(0, 0, 0, 0.12)">
                                <!-- project-thumbnail -->
                                <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id">
                                    <img class="card-img-top" src="@item.Image"
                                     alt="project image cap" style="height: 100%; width:100%">

                                    
                                </a>
                                <p style="text-align: center;color: black;">Name: @item.Name</p>
                                <p style="text-align: center;color: black;">Price: @item.Price</p>
                                @{
                                    Random rnd = new Random();
                                    // This will return either 1 to 100 randomly.
                                    int question = rnd.Next(1, 100);
                                }
                                <p class="mb-2 font-weight-bold">
                                    Most people like <span class="float-right">45%</span>
                                </p>
                                <div class="progress progress-sm">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="45"
                                     aria-valuemin="0" aria-valuemax="100" style="width: 45%;">
                                    </div><!-- /.progress-bar -->
                                </div><!-- /.progress -->
                            </div> <!-- end card-->
                        </div>
                    }
                    <!-- end col -->
                </div>
            </div>
        </div>
    </div>
</div>
